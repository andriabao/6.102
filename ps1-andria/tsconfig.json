{
  "include": [
    "./src/*.ts",
    "./test/*.ts",
  ],
  
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": false, // disabled on ps0 & ps1
    
    "target": "esnext",
    "module": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  
  "typedocOptions": {
    "entryPoints": [
      "lib/animate.ts",
      "src/colors.ts",
      "src/curves.ts",
      "src/lerp.ts",
      "src/toolbox.ts",
      "src/utils.ts",
    ],
    "out": "doc",
    "disableSources": true,
    "excludePrivate": true,
    "readme": "none"
  },
}
