{
  "name": "ps3",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.12.x"
  },
  "scripts": {
    "compile": "tsc",
    "examples": "tsc && node --require source-map-support/register dist/src/examples.js",
    "watch": "tsc --watch --preserveWatchOutput",
    "web": "tsc && node --require source-map-support/register dist/src/web-server.js",
    "start": "tsc && node --require source-map-support/register dist/src/main.js",
    "lint": "tsc && eslint",
    "test": "tsc || exit ; eslint ; mocha --require source-map-support/register dist/test",
    "coverage": "c8 npm test"
  },
  "mocha": {
    "reporter": "spec",
    "exit": true
  },
  "c8": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "coverage/"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "esbuild": "^0.25.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "express": "^5.0.1",
    "open": "^10.1.0",
    "parserlib": "file:/./lib/parserlib-4.0.1.tgz"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "c8": "^10.1.3",
    "eslint": "^9.20.1",
    "eslint-formatter-checkstyle": "^8.40.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "mocha": "^11.0.1",
    "source-map-support": "^0.5.21",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}
